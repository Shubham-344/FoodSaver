<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".freshness"
    android:background="@drawable/bg">

    <!--    individual/group-->
    <!--10-30-->

    <TextView
        android:id="@+id/qnttxt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/playbold"
        android:gravity="center_horizontal|center_vertical"
        android:text="FOOD QUANTITY"
        android:textColor="#000"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.199" />

    <LinearLayout
        android:id="@+id/selectbtns"
        android:layout_width="282dp"
        android:layout_height="112dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.484">

        <androidx.cardview.widget.CardView
            android:id="@+id/individualbtn"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginRight="20dp"
            android:elevation="20dp"
            app:cardBackgroundColor="#D4D0D0"
            android:backgroundTint="#967259">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:src="@drawable/baseline_person_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="10dp"
                android:text="Individual"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/playbold"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/groupbtn"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:elevation="20dp"
            app:cardBackgroundColor="#D4D0D0"
            android:backgroundTint="#634832">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:src="@drawable/baseline_groups_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:text="Group"
                android:textSize="15dp"
                android:textStyle="bold"
                android:fontFamily="@font/playbold"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btns"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.83">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardslot1"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_margin="25dp"
            android:elevation="50dp"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true"
            android:backgroundTint="#00000000"
            android:background="@drawable/buttonbg">

            <TextView
                android:id="@+id/qnt_slot1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/buttonbg"
                android:gravity="center"
                android:text="--"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/playbold"
                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>
        <!--20-50-->
        <androidx.cardview.widget.CardView
