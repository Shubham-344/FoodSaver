<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".freshness">

    <TextView
        android:id="@+id/quality_txt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/playbold"
        android:gravity="center"
        android:text="FOOD QUALITY"
        android:textColor="#000"
        android:textSize="35dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16" />

    <LinearLayout
        android:id="@+id/maincontainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.715">
        <!--freshbutton-->
        <androidx.cardview.widget.CardView
            android:id="@+id/freshbtn"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_margin="25dp"
            android:background="@drawable/buttonbg"
            android:elevation="50dp"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/txtfresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/buttonbg"
                android:gravity="center"
                android:text="FRESH"
                android:textColor="#FFF0F5"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/playbold"/>
        </androidx.cardview.widget.CardView>
        <!--partiallyfreshbutton-->
        <androidx.cardview.widget.CardView
            android:id="@+id/pfbtn"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_margin="25dp"
            android:elevation="50dp"
            app:cardBackgroundColor="#00000000"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/txtpf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/buttonbg"
                android:gravity="center"
                android:text="PARTIALLY FRESH"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#FFF0F5"
                android:fontFamily="@font/playbold"/>
        </androidx.cardview.widget.CardView>
        <!--stalebutton-->
        <androidx.cardview.widget.CardView
            android:id="@+id/stalebtn"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_margin="25dp"
            android:elevation="50dp"
            app:cardBackgroundColor="#00000000"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/txtstale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/buttonbg"
                android:gravity="center"
                android:text="STALE"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/playbold"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>